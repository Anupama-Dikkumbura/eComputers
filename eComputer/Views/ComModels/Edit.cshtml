        });

        $("#ModelDefaultAntivirus").on("change", function () {
            var AntivirusPriceOption = $(this).find('option:selected');
            var AntivirusPrice = AntivirusPriceOption.data('price');
            if (!isNaN(AntivirusPrice)) {
                if (previousValueAntivirus == 0) {
