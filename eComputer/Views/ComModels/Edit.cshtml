                    previousValueAntivirus = AntivirusPrice;
                } else if (previousValueAntivirus != 0) {
                    totalPrice -= previousValueAntivirus;
                    totalPrice += AntivirusPrice;
                    previousValueAntivirus = AntivirusPrice;
                }
            } else {
                totalPrice -= previousValueAntivirus;
                previousValueAntivirus = 0;
            }

            $("#ModelPrice").val(totalPrice);
        });</script>
}