@model IEnumerable<ComModel>

@{
    ViewData["Title"] = "Models";
}


<div class="row">
    <div class="col-md-10 offset-md-1">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Model Name</th>
                    <th>Series</th>
                    <th>Description</th>
                    <th>Price</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Action</th>
                    }

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @item.Id
                        </td>
                        <td class="align-middle">
                            @item.ModelName
                        </td>
                        <td class="align-middle">
                            @item.Series.SeriesName
                        </td>
                        <td class="align-middle">
                            @item.ModelDescription.Substring(0,Math.Min(item.ModelDescription.Length,30))
                        </td>
                        <td class="align-middle">
                            @item.ModelPrice.ToString("c")
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">
                                <a class="btn btn-outline-primary p-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-outline-info p-2" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-outline-danger p-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "ComModels")