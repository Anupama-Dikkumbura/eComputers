
@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-y my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-person-badge"></i>  Log in
    </a>
    <span style="padding:5px"></span>

    <a class="btn btn-outline-primary my-y my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i>  Register
    </a>


    <span style="padding:5px"></span>
}
else
{
    @*User Profile Section*@
<div class="dropdown">
    <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false" data-bs-toggle="dropdown">
        <i class="bi bi-person-badge"></i>Hello, @UserManager.GetUserName(User)
    </button>

    <ul class="dropdown-menu" aria-labelledby="profile-btn">
        @if (User.IsInRole("Customer"))
        {

            <li>
                <a class="dropdown-item" asp-controller="Orders" asp-action="MyOrders"><i class="bi bi-bag"></i> &nbsp; Orders</a>
            </li>

        }
        <li>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> &nbsp; Logout</a>
        </li>
    </ul>

    </div>

    <span style="padding:5px"></span>
}


