@model Order

@{
    ViewData["Title"] = "Cancel Order";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Order Cancellation confirmation</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="Id" class="control-lable"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="control-lable">Order Items</label>
                    <ul>
                        @foreach(var item in Model.OrderItems)
{
                                <li>@item.ComOrder.ComModel.ModelName</li>
}
                    </ul>
                </div>
                <div class="form-group pt-3">
                    <form asp-action="Cancel">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        <a class="btn btn-outline-secondary float-left" asp-action="MyOrders">Go Back</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>