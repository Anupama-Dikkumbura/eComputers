@model Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.CategoryName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>


                <div class="form-group">
                    <label asp-for="Id" class="control-lable"></label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-lable"></label>
                    <input asp-for="CategoryName" class="form-control" readonly />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" style="right:auto" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }

                    <a class="btn btn-outline-secondary float-left" asp-action="Index">Show All</a>
                </div>

            </div>
        </div>
    </div>
</div>
