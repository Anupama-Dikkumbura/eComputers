@{
    ViewData["Title"] = "Dashboard";
}

@section Scripts{

    <style>
        body {
            background: #FAFAFA;
        }

        .order-card {
            color: #fff;
        }

        .bg-c-blue {
            background: linear-gradient(45deg,#4099ff,#73b4ff);
        }

        .bg-c-green {
            background: linear-gradient(45deg,#2ed8b6,#59e0c5);
        }

        .bg-c-yellow {
            background: linear-gradient(45deg,#FFB64D,#ffcb80);
        }

        .bg-c-pink {
            background: linear-gradient(45deg,#FF5370,#ff869a);
        }


        .card {
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
            box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
            border: none;
            margin-bottom: 30px;
            -webkit-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }

            .card .card-block {
                padding: 25px;
            }

        .order-card i {
            font-size: 26px;
        }

        .f-left {
            float: left;
        }

        .f-right {
            float: right;
        }
        a{
            text-decoration:none;
        }
    </style>
}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-4 col-xl-3">
            <div class="card bg-c-blue order-card">
                <div class="card-block">
                    <h6 class="m-b-20">Customers</h6>
                    <h2 class="text-right">
                        <i class="bi bi-person"></i>&nbsp;&nbsp;
                        @ViewBag.CustomerCount
                    </h2>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-xl-3">
            <div class="card bg-c-green order-card">
                <div class="card-block">
                    <h6 class="m-b-20">New Orders</h6>
                    <h2 class="text-right"><i class="bi bi-rocket-takeoff"></i>&nbsp;&nbsp; @ViewBag.NewOrdersCount</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-xl-3">
            <div class="card bg-c-pink order-card">
                <div class="card-block">
                    <h6 class="m-b-20">All Orders</h6>
                    <h2 class="text-right"><i class="bi bi-cart"></i>&nbsp;&nbsp; @ViewBag.AllOrdersCount</h2>
                </div>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
            <div class="col-md-4 col-xl-3">
                <div class="card bg-c-yellow order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Total Sales</h6>
                        <h2 class="text-right">@ViewBag.TotalSales.ToString("c")</h2>
                    </div>
                </div>
            </div>
            }
        </div>
    <hr />
    <div class="pt-2">
        <h1>Manage</h1>
        <div class="row">
            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Sales")))
                {
                <div class="col-md-4 col-xl-3">
                    <a asp-controller="Categories" asp-action="Index">
                        <div class="card bg-c-blue order-card">
                            <div class="card-block">
                                <h2 class="text-center">Categories</h2>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-md-4 col-xl-3">
                    <a asp-controller="Serieses" asp-action="Index">
                        <div class="card bg-c-blue order-card">
                            <div class="card-block">
                                <h2 class="text-center">Serieses</h2>
                            </div>
                        </div>
                    </a>
                </div>


                <div class="col-md-4 col-xl-3">
                    <a asp-controller="Accessories" asp-action="Index">
                        <div class="card bg-c-blue order-card">
                            <div class="card-block">
                                <h2 class="text-center">Accessories</h2>
                            </div>
                        </div>
                    </a>
                </div>


                <div class="col-md-4 col-xl-3">
                    <a asp-controller="ComModels" asp-action="Index">
                        <div class="card bg-c-blue order-card">
                            <div class="card-block">
                                <h2 class="text-center">Models</h2>
                            </div>
                        </div>
                    </a>
                </div>
                }
            </div>
        <div class="row">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                // User management is only allowed for admin user
                <div class="col-md-4 col-xl-3">
                    <a asp-controller="Users" asp-action="Index">
                        <div class="card bg-c-blue order-card">
                            <div class="card-block">
                                <h2 class="text-center">Users</h2>
                            </div>
                        </div>
                    </a>
                </div>
            }
            <div class="col-md-4 col-xl-3">
                <a asp-controller="Orders" asp-action="Index">
                    <div class="card bg-c-blue order-card">
                        <div class="card-block">
                            <h2 class="text-center">Orders</h2>
                        </div>
                    </div>
                </a>
            </div>
            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin")|| User.IsInRole("Sales")))
                {
                <div class="col-md-4 col-xl-3">
                    <a asp-controller="Reports" asp-action="Index">
                        <div class="card bg-c-blue order-card">
                            <div class="card-block">
                                <h2 class="text-center">Reports</h2>
                            </div>
                        </div>
                    </a>
                </div>
                }
            </div>
        </div>
</div>
