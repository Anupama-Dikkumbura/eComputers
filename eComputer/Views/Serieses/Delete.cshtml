@model Series

@{
    ViewData["Title"] = "Delete Series";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.SeriesName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="SeriesName" class="control-lable"></label>
                    <input asp-for="SeriesName" class="form-control" readonly />
                    <span asp-validation-for="SeriesName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Category.CategoryName" class="control-lable"></label>
                    <input asp-for="@Model.Category.CategoryName" class="form-control" readonly />
                    <span asp-validation-for="@Model.Category.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group pt-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        <a class="btn btn-outline-secondary float-left" asp-action="Index">Show All</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>